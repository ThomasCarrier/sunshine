

<aside id="sidebar" class="col-xs-12 col-sm-3 col-md-2 hidden-xs">
  <div class="">
    <div class="profile-sidebar">

      <!-- SIDEBAR USERPIC -->
      <div class="profile-userpic text-center">
        <% if current_user.facebook_picture_url.nil?%>
        <%= image_tag "avatar.png", class: "avatar-large" %>
        <% else %>
        <%= image_tag current_user.facebook_picture_url, class: "avatar-large"%>
        <% end %>
      </div>
      <!-- END SIDEBAR USERPIC -->

      <!-- SIDEBAR USER TITLE -->
      <div class="profile-usertitle">
        <div class="profile-usertitle-name">
          <%= current_user.first_name.capitalize %>
        </div>
        <div class="user-city">
          <p><%= current_user.address %></p>
        </div>
      </div>
      <!-- END SIDEBAR USER TITLE -->

      <!-- SIDEBAR MENU -->
      <div>
        <ul class="profile-usermenu">
          <li class="profile-usermenu-item">
            <%= link_to("My dashboard", contracts_path )%>
          </li>
          <li class="profile-usermenu-item">
            <%= link_to("My impact", dashboard_path) %>
          </li>
          <li class="profile-usermenu-item">
            <%= link_to("My neighborhood impact", dashboard_neighbour_path) %>
          </li>
        </ul>
      </div>


      <div class="sidebar-logout">
        <div>
          <%= link_to(t('shared.sidebar.edit'), edit_user_registration_path, class: "navbar-wagon-link") %>&nbsp;|
          <%= link_to t(".sign_out", default: "Log out"), destroy_user_session_path, method: :delete, class: "navbar-wagon-link" %>
        </div>
      </div>
      <!-- END MENU -->
    </div>
  </div>
</aside>

<div class="navbar-wagon hidden-sm hidden-md hidden-lg">
  <!-- Logo -->

  <!-- Profile picture and dropdown -->
  <div class="navbar-wagon-item">
    <div class="dropdown">
     <div class="profile-userpic text-center smallpic">
      <% if current_user.facebook_picture_url.nil?%>
      <%= image_tag "avatar.png", class: "avatar-large" %>
      <% else %>
      <%= image_tag current_user.facebook_picture_url, class: "avatar-large"%>
      <% end %>
    </div>
  </div>
</div>

<!-- Dropdown appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li class="profile-usermenu-item">
          <%= link_to("My dashboard", contracts_path )%>
        </li>
        <li class="profile-usermenu-item">
          <%= link_to("My impact", dashboard_path) %>
        </li>
        <li class="profile-usermenu-item">
          <%= link_to("My neighborhood impact", dashboard_neighbour_path) %>
        </li>
    </div>
    </ul>
  </div>
</div>

