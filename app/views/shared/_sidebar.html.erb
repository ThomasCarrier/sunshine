<aside id="sidebar" class="col-xs-12 col-sm-3 col-md-2">
  <div class="">
    <div class="profile-sidebar">

      <!-- SIDEBAR USERPIC -->
      <div class="profile-userpic text-center">
        <% if current_user.facebook_picture_url.nil?%>
        <%= image_tag "avatar.png", class: "avatar-large" %>
        <% else %>
        <%= image_tag current_user.facebook_picture_url, class: "avatar-large"%>
        <% end %>
      </div>
      <!-- END SIDEBAR USERPIC -->

      <!-- SIDEBAR USER TITLE -->
      <div class="profile-usertitle">
        <div class="profile-usertitle-name">
          <%= current_user.first_name.capitalize %>
        </div>
        <div class="user-city">
          <p><%= current_user.address %></p>
        </div>
        <div class="">

          <%= link_to "Edit Profile", edit_user_registration_path, class: "navbar-wagon-link" %>&nbsp;|
          <%= link_to t(".sign_out", default: "Log out"), destroy_user_session_path, method: :delete, class: "navbar-wagon-link" %>
        </div>
      </div>
      <!-- END SIDEBAR USER TITLE -->

      <!-- SIDEBAR MENU -->
      <div>
        <ul class="profile-usermenu">
          <li class="profile-usermenu-item">
            <%= link_to "Home", dashboard_path %>
          </li>
          <% unless current_user.solar_panel.nil? %>
          <li class="profile-usermenu-item">
            <%= link_to "My production", my_panel_path %>
          </li>
          <% end %>
          <li class="profile-usermenu-item">
            <%= link_to "Consume local solar energy", located_solar_panels_path %>
          </li>
          <li class="profile-usermenu-item">
            <%= link_to "Sharing Agreements", contracts_path%>
          </li>
        </ul>
      </div>
      <!-- END MENU -->
    </div>
  </div>

  <div class="text-center sidebar-bottom-button-grp">
    <%= link_to "Back to Home Page", root_path, class: "navbar-wagon-link-blue" %>
    <%= link_to "Produce Solar Energy", new_solar_panel_path, class: "navbar-wagon-button-orange"%>
  </div>

</aside>
