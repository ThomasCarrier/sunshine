<%= render "shared/homepage_navbar" %>

<!-- VIDEO BACKGROUND SPLASH -->

<div class="video-container">
  <div class="splash-page-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <h1 class="splash-title"><%=t('.title')%></h1>
    <h2 class="splash-sub-title text-center"><%=t('.title1')%></h2>
    <p class="text-center splash-text"><%=t('.subtitle_0')%><br><%=t('.subtitle_1') %><span class="orange-text"><%=t('.subtitle_2') %></span><%=t('.subtitle_3') %></p>
    <div class="center-button text-center">
      <%= link_to(t('.enter_simulation'), welcome_path, class: "splash-page-box-btn") %>
    </div>
  </div>
  <%= render 'shared/fullscreen_video' %>
</div>

<main class="homepage-main-content">

  <section class="homepage-section" id="how-it-works">

    <div class="container-fluid">
      <h3 class="text-center section-title orange-text"><%=t('.our_approach')%></h3>

      <!-- PROBLEM -->

      <div class="row col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 goal-section">
        <div class="col-xs-12 col-sm-6 goal-column graphic">
          <p class="text-center"><i class="fa fa-question homepage-card-icon"></i></p>
        </div>

        <div class="col-xs-12 col-sm-6 goal-column">
          <h4 class="text-center card-title"><%=t('.the_problems') %></h4>
          <div class="card-content-container">
            <p>
              <%= t('.problems_p1') %>
            </p>
            <p>
              <%= t('.problems_p2') %>
            </p>
            <p>
              <%= t('.problems_p3') %>
            </p>
          </div>
        </div>
      </div>

      <!-- HYPOTHETICAL SOLUTION -->

      <div class="row col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 goal-section">
        <div class="col-xs-12 col-sm-6 col-sm-push-6 goal-column graphic">
          <p class="text-center"><i class="fa fa-lightbulb-o homepage-card-icon"></i></p>
        </div>

        <div class="col-xs-12 col-sm-6 col-sm-pull-6 goal-column">
          <h4 class="text-center card-title"><%= t('.the_solutions') %></h4>
          <div class="card-content-container">
            <p>
              <%= t('.solutions_p1') %>
            </p>
            <p>
              <%= t('.solutions_p2') %>
            </p>
            <p>
              <%= t('.solutions_p3') %>
            </p>

          </div>
        </div>
      </div>

      <!-- PLATFORM'S EXPLANATION -->

      <div class="row col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 goal-section">
        <div class="col-xs-12 col-sm-6 goal-column graphic">
          <p class="text-center"><i class="fa fa-share-alt homepage-card-icon"></i></p>
        </div>

        <div class="col-xs-12 col-sm-6 goal-column">
          <h4 class="text-center card-title"><%= t('.the_platform') %></h4>
          <div class="card-content-container">
          <p>
              <%= t('.platform_p1') %>
            </p>
            <p>
              <%= t('.platform_p2') %>
            </p>
            <p class="orange-text">
              <%= t('.platform_p3') %>
            </p>

          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%= render "shared/homepage_footer" %>
