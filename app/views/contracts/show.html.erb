<h1>Contract Details</h1>

<h3>ContractID: <%= @contract.id %></h3>

<ul>
  <li>Seller: <%= @contract.solar_panel.user.email %></li>
  <li>Buyer: <%= @contract.user.email %></li>
  <li>Price: <%= @contract.solar_panel.price %></li>
  <li>Start-Date: <%= @contract.start_date %></li>

  <% if @contract.end_date %>
    <li>End-Date_ <%= @contract.end_date %></li>
  <% end %>

</ul>

<% unless @contract.end_date %>
  <%= link_to "Cancel Contract", contract_terminate_current_user_index_path(@contract), :method => :patch  %>

<% end %>
