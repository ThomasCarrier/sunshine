<% @sidebar = true %>

<div class="contracts-container">
  <!-- Nav tabs -->

  <div class="tabs">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active">
        <a href="#producers" aria-controls="producers" role="tab" data-toggle="tab"><i class="fa fa-users"></i> My local producers</a>
      </li>
      <li role="presentation">
        <a href="#consumers" aria-controls="consumers" role="tab" data-toggle="tab"><i class="fa fa-bolt"></i> My consumers</a>
      </li>
    </ul>
  </div>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="producers">
      <% if current_user.contracts.any? %>
        <%= render "producers" %>
      <% else %>
      <div class="card-dashboard text-center">
        <h3>Welcome <strong><%= current_user.first_name.capitalize %></strong>, you have no producer for the moment</h3>
        <br>
        <%=  link_to "Find a local producer", solar_panels_path, class: "navbar-wagon-button-orange"  %>
      </div>
      <% end %>
    </div>
    <div role="tabpanel" class="tab-pane" id="consumers">
     <% if current_user.solar_panel %>
     <%= render "consumers" %>
     <% else %>
     <div class="card-dashboard text-center">
       <h3><strong><%= current_user.first_name.capitalize %></strong>, you could produce your own energy and share it with your neighbours.</h3>
     <br>
     <br>
     <%=  link_to "Produce my energy", new_solar_panel_path, class: "navbar-wagon-button-orange"  %>
     <% end %>
     </div>
   </div>
  </div>

</div>




