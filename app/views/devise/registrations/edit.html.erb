<div class="row">
  <div class="splash-page-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>
    <div class="card-content-container">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true, :input_html => { :value => current_user.first_name} %>
        <%= f.input :email, required: false, autofocus: true, :input_html => { :value => current_user.email} %>
        <%= f.input :address, autofocus: true, :input_html => { :value => current_user.address} %>

        <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <!-- <p>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></p> -->
        <%# end %>

        <%#= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%#= f.input :password_confirmation, required: false %>
        <%#= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
      </div>


      <div class="form-actions text-center">
        <%= f.button :submit, "Update", class: "navbar-wagon-button-orange btn" %>
      </div>
      <% end %>

      <p class="text-center">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), class: "navbar-wagon-link", data: { confirm: "Are you sure?" }, method: :delete %></p>

    </div>
  </div>
</div>

<%= link_to "Back", dashboard_path, class: "navbar-wagon-button-orange back-btn" %>

