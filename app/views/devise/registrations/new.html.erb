<div class="video-container">
  <div class="splash-page-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <h2 class="text-center">SIGN UP</h2>
    <div class="card-content-container">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <%= field_set_tag nil, class: 'form-inputs' do %>
          <%= f.input :first_name, label: false, input_html: {class: " splash-page-field"}, required: true, autofocus: true, hint: ("#{@minimum_last_name_length} characters minimum" if @minimum_last_name_length), placeholder: "What is your name?" %>
          <%= button_tag(type: 'button', class: 'splash-page-box-btn next', id: 'next') do %>
            next
          <% end %>
          <%= render "devise/shared/links" %>
        <% end %>
        <%= field_set_tag nil, class: 'form-inputs', style: "display: none" do %>
          <%= f.input :email, label: false, input_html: {class: "splash-page-field"}, required: true, autofocus: true, placeholder: "What is your email?" %>
          <%= f.input :address, label: false, input_html: {class: " splash-page-field", value: session[:current_user_address], class: 'hidden'}, required: true, autofocus: true %>
          <%= f.input :password, label: false, input_html: {value: "123456", class: "hidden"} %>
          <%= f.input :password_confirmation, label: false, input_html: { value: "123456", class: "hidden"} %>
          <%= f.button :submit, "Sign up", class: "splash-page-box-btn" %>
          <%= button_tag(type: 'button', class: 'splash-page-box-btn', id: 'back') do %>
            Back
          <% end %>
        <% end %>

      <% end %>
    </div>
  </div>

  <%= render 'shared/fullscreen_video' %>

</div>
