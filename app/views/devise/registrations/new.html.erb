<div class="video-container">
  <div class="splash-page-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <h2 class="text-center">SIGN UP</h2>
      <div class="card-content-container">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, required: true, autofocus: true, hint: ("#{@minimum_last_name_length} characters minimum" if @minimum_last_name_length) %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :address, required: true, autofocus: true, :input_html => { :value => session[:current_user_address]} %>
            <%= f.input :password, label: false, :input_html => { :value => "123456", class: "hidden"} %>
            <%= f.input :password_confirmation, label: false, :input_html => { :value => "123456", class: "hidden"} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "splash-page-box-btn" %>
          </div>

        <% end %>
      </div>
      <%= render "devise/shared/links" %>
  </div>

  <%= render 'shared/fullscreen_video' %>

</div>
